  "version": "2.2.1",
  "description": "Stop throwing errors, and instead return Results!",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "test": "jest",
    "lint": "eslint ./src --ext .ts",
    "format": "prettier --write 'src/**/*.ts?(x)' && npm run lint -- --fix",
